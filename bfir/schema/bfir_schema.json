{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Binary Format Intermediate Representation",
    "description": "Schema for representing binary format structures",
    "type": "object",
    "properties": {
        "format": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "endianness": {
                    "enum": [
                        "big",
                        "little",
                        "mixed"
                    ]
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "endianness"
            ]
        },
        "fields": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "parent": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "offset": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "size": {
                        "type": [
                            "integer",
                            "null"
                        ]
                    },
                    "type": {
                        "enum": [
                            "simple_value",
                            "fixed_pattern",
                            "bit_fields",
                            "array",
                            "enum",
                            "struct",
                            "union",
                            "custom"
                        ]
                    },
                    "value_type": {
                        "enum": [
                            "uint8",
                            "uint16",
                            "uint32",
                            "uint64",
                            "int8",
                            "int16",
                            "int32",
                            "int64",
                            "float",
                            "double",
                            "char",
                            "string",
                            "binary",
                            "custom"
                        ]
                    },
                    "bit_fields": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "bits": {
                                    "type": "integer"
                                },
                                "mask": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "bits"
                            ]
                        }
                    },
                    "enum_values": {
                        "type": "object",
                        "additionalProperties": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        }
                    }
                },
                "required": [
                    "id",
                    "name",
                    "type"
                ]
            }
        }
    },
    "required": [
        "format",
        "fields"
    ]
}